@model Grades.Models.Activity

<h2>Eliminar Actividad</h2>
<p>¿Estás seguro de que deseas eliminar esta actividad?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Calificación</dt>
        <dd class="col-sm-10">@Model.Grade</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Date.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Comentarios</dt>
        <dd class="col-sm-10">@Model.Comments</dd>
    </dl>

    <form asp-action="DeleteActivity" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Details" asp-route-id="@Model.SubjectId" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
