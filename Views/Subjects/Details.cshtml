@model Grades.Models.Subject

<h2>Actividades de @Model.Name</h2>

<p>
    <a asp-action="CreateActivity" asp-route-subjectId="@Model.Id">Agregar Nueva Actividad</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Calificación</th>
            <th>Fecha</th>
            <th>Comentarios</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr>
                <td>@activity.Type</td>
                <td>@activity.Grade</td>
                <td>@activity.Date.ToShortDateString()</td>
                <td>@(activity.Comments ?? "Sin comentarios adicionales")</td>
                <td>
                    <a asp-action="EditActivity" asp-route-id="@activity.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="DeleteActivity" asp-route-id="@activity.Id" class="btn btn-danger btn-sm" onclick="return confirm('¿Estás seguro de que deseas eliminar esta actividad?');">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">Volver a la lista de materias</a>