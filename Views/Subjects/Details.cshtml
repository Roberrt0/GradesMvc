@model Grades.Models.Subject

<h2>Actividades de @Model.Name</h2>

<p>
    <a asp-action="CreateActivity" asp-route-subjectId="@Model.Id">Agregar Nueva Actividad</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Calificaci√≥n</th>
            <th>Fecha</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var activity in Model.Activities)
        {
            <tr>
                <td>@activity.Type</td>
                <td>@activity.Grade</td>
                <td>@activity.Date.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index">Volver a la lista de materias</a>